<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/transparent">
    
    <RelativeLayout
        android:id="@+id/card_header_alllayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp" 
        android:background="#00000000">
        
        <RelativeLayout
            android:id="@+id/card_header_company"
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:background="#00000000">
            
            <TextView
                android:id="@+id/card_header_company_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="宸峯科技" 
                android:textSize="28dp" 
                android:background="#00000000"/>
            <!-- android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" -->
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/card_header_duty"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/card_header_company"
            android:background="#00000000">
            <TextView
                android:id="@+id/card_header_dutydepartment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="开发        Android程序员"
                android:textSize="20dp" 
                android:background="#00000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_header_allinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_header_duty"
            android:background="#00000000">
            
            <RelativeLayout
                android:id="@+id/card_header_layout1"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="#00000000">
                
                <TextView
                    android:id="@+id/card_header_layout1_text"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"                    
                    android:layout_toRightOf="@+id/card_header_layout1_img"
                    android:text="内容"
                    android:background="#00000000" />
                
                <TextView
                    android:id="@+id/card_header_layout1_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="图" 
                    android:background="#00000000"/>

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/card_header_layout2"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/card_header_layout1"
                android:background="#00000000">
                
                <TextView
                    android:id="@+id/card_header_layout2_text"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"                    
                    android:layout_toRightOf="@+id/card_header_layout2_img"
                    android:text="内容" 
                    android:background="#00000000"/>
                
                <TextView
                    android:id="@+id/card_header_layout2_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="图" 
                    android:background="#00000000"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/card_header_layout3"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/card_header_layout2"
                android:background="#00000000">
                
                <TextView
                    android:id="@+id/card_header_layout3_text"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"                    
                    android:layout_toRightOf="@+id/card_header_layout3_img"
                    android:text="内容" 
                    android:background="#00000000"/>
                
                <TextView
                    android:id="@+id/card_header_layout3_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="图" 
                    android:background="#00000000"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/card_header_layout4"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/card_header_layout3"
                android:background="#00000000">
                
                <TextView
                    android:id="@+id/card_header_layout4_text"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"                    
                    android:layout_toRightOf="@+id/card_header_layout4_img"
                    android:text="内容" 
                    android:background="#00000000"/>
                
                <TextView
                    android:id="@+id/card_header_layout4_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="图" 
                    android:background="#00000000"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/card_header_layout5"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/card_header_layout4"
                android:background="#00000000">
                
                <TextView
                    android:id="@+id/card_header_layout5_text"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"                    
                    android:layout_toRightOf="@+id/card_header_layout5_img"
                    android:text="内容" 
                    android:background="#00000000"/>
                
                <TextView
                    android:id="@+id/card_header_layout5_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="图" 
                    android:background="#00000000"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/card_header_layout6"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/card_header_layout5"
                android:background="#00000000">
                
                <TextView
                    android:id="@+id/card_header_layout6_text"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"                    
                    android:layout_toRightOf="@+id/card_header_layout6_img"
                    android:text="内容"
                    android:background="#00000000" />
                
                <TextView
                    android:id="@+id/card_header_layout6_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="图" 
                    android:background="#00000000"/>
            </RelativeLayout>
            
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
