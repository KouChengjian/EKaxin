<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/transparent">
    
    <RelativeLayout
        android:id="@+id/card_centre_alllayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp" >
        <!-- android:background="#00000000" -->
        <RelativeLayout
            android:id="@+id/card_centre_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#00000000" >
            
            <RelativeLayout
                android:id="@+id/card_centre_layout1"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="#00000000">

            <ImageView
                android:id="@+id/centre_pic1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/head" 
                android:layout_alignParentLeft="true"
                android:background="#00000000"
                />
            <ImageView
                android:id="@+id/centre_pic3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher" 
                android:layout_alignParentRight="true"
                android:background="#00000000"
                />

            <ImageView
                android:id="@+id/centre_pic2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:src="@drawable/item" />

            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/card_centre_layout2"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_below="@+id/card_centre_layout1"
                android:background="#00000000">
            
            <TextView
                android:id="@+id/card_centre_layout2_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="寇成坚   KouChengjian" 
                android:textSize="28dp" 
                android:background="#00000000"/>
            <!-- android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" -->
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/card_centre_layout3"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/card_centre_layout2"
            android:background="#00000000">
            <TextView
                android:id="@+id/card_centre_layout3_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="程序员"
                android:textSize="20dp" 
                android:background="#00000000"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/card_centre_layout4"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/card_centre_layout3"
            android:background="#00000000">
            <TextView
                android:id="@+id/card_centre_layout4_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="18710627436"
                android:textSize="20dp"
                android:background="#00000000" />
        </RelativeLayout>
        </RelativeLayout>
 
    </RelativeLayout>

</RelativeLayout>
