<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#211738"
        android:padding="2dp"
        android:textSize="12sp"
        android:textColor="@color/guide_color" />

    <ImageView
        android:id="@+id/img_friend_avatar"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_below="@+id/alpha"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:src="@drawable/head" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60.0dip"
        android:layout_alignBottom="@+id/img_friend_avatar"
        android:layout_alignTop="@+id/img_friend_avatar"
        android:layout_toRightOf="@+id/img_friend_avatar"
        android:padding="5dp" >
        
        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:singleLine="true"
            android:text="ssd"
            android:textSize="22sp" 
            android:textColor="#ffffff"/>
        
        <TextView
            android:id="@+id/tv_friend_duty"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_friend_name"
            android:singleLine="true"
            android:textSize="15sp" 
            android:text="ssd"
            android:textColor="#ffffff"/>
        
    </RelativeLayout>
    
    <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#18112a" 
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/img_friend_avatar"/>

</RelativeLayout>