<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_carte_image_all"
        android:layout_width="match_parent"
        android:layout_height="220dp" >

        <RelativeLayout
            android:id="@+id/rl_carte_image_comntent"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="5dp"
            android:background="@drawable/pic_screen" >

            <RelativeLayout
                android:id="@+id/rl_carte_image_title"
                android:layout_width="match_parent"
                android:layout_height="30dp" >

                <RelativeLayout
                    android:id="@+id/rl_carte_image_title_state"
                    android:layout_width="60dp"
                    android:layout_height="30dp" 
                    android:background="@drawable/img_carte_exchange">
                    <ImageView 
                        android:id="@+id/img_carte_image_title_state_icon"
                        android:layout_width="40dp"
                        android:layout_height="30dp" 
                        android:background="@drawable/img_carte_exchange_1"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_carte_image_title_attention"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" >
                    <ImageView 
                        android:id="@+id/img_carte_image_title_attention"
                        android:layout_width="30dp"
                        android:layout_height="30dp" 
                        android:layout_margin="2dp"
                        android:background="@drawable/ic_action_fav_normal"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>