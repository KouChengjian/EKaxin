<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#00000000">
    
    <RelativeLayout
        android:id="@+id/centre1_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp" 
        android:background="#00000000">
        
        <RelativeLayout
            android:id="@+id/card_centre1_layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" 
            android:background="#00000000">
            
            <RelativeLayout
                android:id="@+id/card_centre1_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#00000000">

                <ImageView
                    android:id="@+id/centre1_pic1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/head" 
                    android:layout_alignParentLeft="true"
                    android:background="#00000000"/>
            
                <RelativeLayout
                    android:id="@+id/card_centre1_layout3"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@+id/centre1_pic1"
                    android:background="#00000000">
            
                    <TextView
                        android:id="@+id/card_header_text1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="寇成坚  KouChengjian" 
                        android:textSize="20dp" 
                        android:background="#00000000"
                        android:layout_marginLeft="10dp"/>
            <!-- android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" -->
                </RelativeLayout>
            
                <RelativeLayout
                    android:id="@+id/card_centre1_layout4"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/card_centre1_layout3"
                    android:layout_toRightOf="@+id/centre1_pic1"
                    android:background="#00000000" >

                    <TextView
                        android:id="@+id/card_header_text2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="开发  "
                        android:background="#00000000"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>
        
                <RelativeLayout
                    android:id="@+id/card_centre1_layout5"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/card_centre1_layout4"
                    android:layout_toRightOf="@+id/centre1_pic1" 
                    android:background="#00000000">

                    <TextView
                        android:id="@+id/card_header_text3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="开发   " 
                        android:background="#00000000"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                

             </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/card_centre1_layout6"
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/card_centre1_layout1"
            android:background="#00000000" >
            <TextView
                android:id="@+id/card_centre1_layout6_text"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:text="宸峯科技" 
                android:textSize="28dp" 
                android:background="#00000000"/>
            <!-- android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" -->
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
