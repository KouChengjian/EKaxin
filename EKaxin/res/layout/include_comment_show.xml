<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:descendantFocusability="blocksDescendants"
        android:padding="8dip" >

        <ImageView
            android:id="@+id/details_comment_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/user_icon_default_main" />

        <TextView
            android:id="@+id/details_comment_name"
            style="@style/TextTheme"
            android:layout_alignBottom="@id/details_comment_logo"
            android:layout_alignTop="@id/details_comment_logo"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/details_comment_logo"
            android:gravity="center_vertical"
            android:text="岁月抚伤" />

        <TextView
            android:id="@+id/details_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/details_comment_logo"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/details_comment_logo"
            android:gravity="center"
            android:text="时间" />

        <TextView
            android:id="@+id/details_comment_text"
            style="@style/TextTheme"
            android:layout_below="@id/details_comment_logo"
            android:layout_margin="4dp"
            android:text="十年之前，我不认识你 你不属于我，我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。" />

        <ImageView
            android:id="@+id/details_comment_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_text"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_1"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_2"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_image_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_3"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_image_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_4"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_image_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_5"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_image_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_6"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_image_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_7"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_image_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_8"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pic_loading"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_comment_two_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_comment_image_9" >

            <TextView
                android:id="@+id/tv_comment_two_comment_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_comment_two_comment_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_comment_two_comment_1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_comment_two_comment_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_comment_two_comment_2"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>