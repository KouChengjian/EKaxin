<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_notepadlist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:padding="2dp"
        android:textColor="@color/guide_color"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/tv_notepadlist_title" >

        <LinearLayout
            android:id="@+id/ll_notepadlist"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <RelativeLayout
                    android:id="@+id/rl_notepadlist_item1_title"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_notepadlist_item1_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/rl_notepadlist_item1_title"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/tv_notepadlist_item1_content_title"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" 
                        android:gravity="center"
                        android:textSize="12sp">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_notepadlist_item1_content_content"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" 
                        android:layout_below="@+id/tv_notepadlist_item1_content_title"
                        android:textSize="10sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                    </TextView>

                    <LinearLayout
                        android:id="@+id/ll_notepadlist_item1_content_time"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_notepadlist_item1_content_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_notepadlist_item1_content_time"
                            android:layout_width="50dp"
                            android:layout_height="20dp" 
                            android:gravity="center"
                            android:textSize="8sp">
                        </TextView>

                        <LinearLayout
                            android:id="@+id/ll_notepadlist_item1_content_pic"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/tv_notepadlist_item1_content_pic1"
                                android:layout_width="20dp"
                                android:layout_height="20dp" >
                            </ImageView>

                            <ImageView
                                android:id="@+id/tv_notepadlist_item1_content_pic2"
                                android:layout_width="20dp"
                                android:layout_height="20dp" >
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <RelativeLayout
                    android:id="@+id/rl_notepadlist_item2_title"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_notepadlist_item2_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/rl_notepadlist_item2_title"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/tv_notepadlist_item2_content_title"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:textSize="12sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_notepadlist_item2_content_content"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" 
                        android:layout_below="@+id/tv_notepadlist_item2_content_title"
                        android:textSize="10sp" 
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                    </TextView>

                    <LinearLayout
                        android:id="@+id/ll_notepadlist_item2_content_time"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_notepadlist_item2_content_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_notepadlist_item2_content_time"
                            android:layout_width="50dp"
                            android:layout_height="20dp" 
                            android:gravity="center"
                            android:textSize="8sp">
                        </TextView>

                        <LinearLayout
                            android:id="@+id/ll_notepadlist_item2_content_pic"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/tv_notepadlist_item2_content_pic1"
                                android:layout_width="20dp"
                                android:layout_height="20dp" >
                            </ImageView>

                            <ImageView
                                android:id="@+id/tv_notepadlist_item2_content_pic2"
                                android:layout_width="20dp"
                                android:layout_height="20dp" >
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <RelativeLayout
                    android:id="@+id/rl_notepadlist_item3_title"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_notepadlist_item3_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/rl_notepadlist_item3_title"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/tv_notepadlist_item3_content_title"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" 
                        android:gravity="center"
                        android:textSize="12sp">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_notepadlist_item3_content_content"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" 
                        android:layout_below="@+id/tv_notepadlist_item3_content_title"
                        android:textSize="10sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                    </TextView>

                    <LinearLayout
                        android:id="@+id/ll_notepadlist_item3_content_time"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_notepadlist_item3_content_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_notepadlist_item3_content_time"
                            android:layout_width="50dp"
                            android:layout_height="20dp" 
                            android:gravity="center"
                            android:textSize="8sp">
                        </TextView>

                        <LinearLayout
                            android:id="@+id/ll_notepadlist_item3_content_pic"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/tv_notepadlist_item3_content_pic1"
                                android:layout_width="20dp"
                                android:layout_height="20dp" >
                            </ImageView>

                            <ImageView
                                android:id="@+id/tv_notepadlist_item3_content_pic2"
                                android:layout_width="20dp"
                                android:layout_height="20dp" >
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>